<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
<head>
	<title>Schwarzes Album mit nem silbernen Knopf</title>
	<meta http-equiv="content-type" content="text/html; charset=UTF-8" />
	<link rel="stylesheet" type="text/css" href="/static/css/main.css" />
	<link rel="stylesheet" type="text/css" href="/static/css/album.css" />
	<script src="/static/js/album.js"></script>
	<script src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>

	<link href="http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet" />
	<link rel="stylesheet" href="/static/lib/dropdown/css/style.css" />
</head>
<body>

<div class="top-div">
	<div class="back-img-container">
		<a href="gallery.html">
			<i class="fa fa-arrow-circle-left fa-2x"></i>
		</a>
	</div>
	<div class="order-by-container">
		<div class="info-container">
			<span class="info-text">
				Order by:
			</span>
		</div>
		<div class="dropdown dropdown-dark">
			<select name="sort" class="dropdown-select">
				<form>
					<option>Name</option>
					<option>Upload Date</option>
				</form>
			</select>
		</div>
	</div>
	<!--div id="searchContainer">
		<input placeholder="search" size="40"/>
	</div-->
	<!--span id="userName">
		USERNAME
	</span-->
</div>

<!--div class="right-div">
	<span id="logout">
		Logout
	</span-->
	<!--span id="setup">
		Admin only
	</span>
</div-->

<div class="container" id="main-container">
	{% for img in album.photo_set.all %}
	<!-- Album snippet -->
	<!-- für jedes Bild im Album zu container div hinzufügen -->
		<a href="{% url 'imageDetail' img.id %}"> <!-- link zu carousel mit angabe des bildes -->
			<div id="" class="panel pic-preview"> <!-- Bild Name in ID einfügen -->
				<div class="panel-body panel-body-preview">
					<img class="image-preview" src="{{img.imgPreview.url}}" />
				</div>
			</div>
		</a>
	{% endfor %}
</div>

</body>
</html>